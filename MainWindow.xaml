<Window x:Class="HMID.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMID"
        mc:Ignorable="d"
        Title="HMID"
        WindowState="Maximized">
    <Window.Resources>
        <DataTemplate x:Key="CarsDataTemplate">
            <Grid Margin="-2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="49" />
                    <ColumnDefinition Width="49" />
                </Grid.ColumnDefinitions>
                <TextBlock Text ="{Binding number1}" Background  = "{Binding color}" FontSize="12"/>
                <TextBlock Grid.Column="1" Text="{Binding number2}" Background  = "{Binding color}" TextAlignment="Right" FontSize="12"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
        <MenuItem Header="File"></MenuItem>
        <MenuItem Header="Edit"></MenuItem>
        <MenuItem Header="Help"></MenuItem>
            </Menu>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <WrapPanel Name="panel1" HorizontalAlignment="Stretch" Margin="0 25 0 0">
                <Button Content="X" Width="20" Height="20" VerticalAlignment="Top" Margin="2,2,40,0" Click="Button_Click"/>
                <Button Content="Y" Width="20" Height="20" VerticalAlignment="Top" Margin="2,2,40,0" Click="Button_Click1"/>
                <ListBox Name="lbTodoList" Width="130" Padding="0,0,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="-2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="49" />
                                    <ColumnDefinition Width="49" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text ="{Binding number1}" Background  = "{Binding color}" FontSize="12"/>
                                <TextBlock Grid.Column="1" Text="{Binding number2}" Background  = "{Binding color}" TextAlignment="Right" FontSize="12"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>
